	"bracketSpacing": true,
	"singleQuote": true,
	"bracketSameLine": false,
	"endOfLine": "crlf",
	"arrowParens": "avoid",
	"overrides": [
		{
			"files": ["*.ts", "*.tsx", "*.js"],
			"options": {
				"semi": true,
				"tabWidth": 4,
				"useTabs": false,
				"quoteProps": "as-needed",
				"singleQuote": true,
				"bracketSpacing": true,
				"bracketSameLine": false,
				"printWidth": 360
			}
		}
	]
}
